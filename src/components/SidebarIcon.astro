---
export interface Props {
    icon: string;
    href: string;
    alt: string;
}
const {icon, href = '/', alt} = Astro.props as Props;
---
<a class="sidebaricon" href={href}>
        <img src={icon}, alt={alt}>
        <span>
            {alt}
        </span>
</a>
<style>
    .sidebaricon{
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 4rem;
        width: 4rem;
        margin-top: 1rem;
        margin-bottom: 1rem;
        margin-left: auto;
        margin-right: auto;
        border-radius: 2rem;
        background-color: var(--backgroundcol);        
        transition-property: all;
        transition-timing-function: linear;
        transition-duration: 200ms;
        cursor: default;
        
    }

    .sidebaricon:hover{
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 4rem;
        width: 4rem;
        margin-top: 1rem;
        margin-bottom: 1rem;
        margin-left: auto;
        margin-right: auto;
        border-radius: 1rem;
        background-color: rgb(54,54,54);
        transition-property: all;
        transition-timing-function: linear;
        transition-duration: 200ms;
        cursor: pointer;
    }
    
    span{
        position: absolute; 
        left: 3rem; 
        padding: 0.5rem; 
        margin: 0.5rem; 
        background-color: rgb(54,54,54); 
        transition-property: all; 
        transition-duration: 100ms; 
        transform-origin: left; 
        --transform-scale-x: 0;
        --transform-scale-y: 0; 
        scale: 0%;
        color: var(--textcol); 
        font-size: 0.75rem;
        line-height: 1rem; 
        font-weight: 700; 
        width: auto; 
        min-width: max-content; 
        border-radius: 0.375rem; 
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.2), 0 2px 4px -1px rgba(0, 0, 0, 0.06); 
    }

    .sidebaricon:hover span{
        scale: 100%;
        left:4.5rem;
    }
</style>